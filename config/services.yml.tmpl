http:
  services:
    ovpn-starter:
      loadBalancer:
        servers:
          - url: http://${OPENVPN_IP}:${OPENVPN_PORT}
        passHostHeader: true
        serversTransport: internal-transport

    nginx-static:
      loadBalancer:
        servers:
          - url: http://${OPENVPN_IP}:80
        passHostHeader: true

    noop:
      loadBalancer:
        servers:
          - url: "http://127.0.0.1"

serversTransport:
  internal-transport:
    rootCAs:
      - /certs/pfSense_Management_CA.crt